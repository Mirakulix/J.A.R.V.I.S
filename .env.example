# JARVIS Multi-Container Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# Database Passwords
# ===========================================
POSTGRES_PERSONS_PASSWORD=your_secure_persons_db_password
POSTGRES_ORG_PASSWORD=your_secure_org_db_password
POSTGRES_MEDICAL_PASSWORD=your_secure_medical_db_password
POSTGRES_TRADING_PASSWORD=your_secure_trading_db_password

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=your_secure_redis_password

# ===========================================
# API Keys (stored in secrets files)
# ===========================================
# These are loaded from secret files, not environment variables
# See ./secrets/ directory for actual API key files

# Claude Code API Key
# File: ./secrets/claude_code_api_key.txt

# 1Password Service Account Token
# File: ./secrets/onepassword_token.txt

# Google API Credentials
# File: ./secrets/google_credentials.json

# Microsoft Outlook API
# File: ./secrets/outlook_client_id.txt
# File: ./secrets/outlook_client_secret.txt

# Financial API Keys
# File: ./secrets/bitpanda_api_key.txt
# File: ./secrets/alpha_vantage_api_key.txt

# GitHub Integration
# File: ./secrets/github_token.txt

# Medical Data Encryption
# File: ./secrets/medical_encryption_key.txt

# ===========================================
# Container Configuration
# ===========================================
COMPOSE_PROJECT_NAME=jarvis
COMPOSE_FILE=docker-compose.yml

# ===========================================
# Monitoring & Logging
# ===========================================
LOG_LEVEL=info
METRICS_RETENTION_DAYS=30
BACKUP_RETENTION_DAYS=90

# ===========================================
# Security Settings
# ===========================================
CONTAINER_SECURITY_LEVEL=strict
NETWORK_ISOLATION=true
ENABLE_RATE_LIMITING=true

# ===========================================
# Development Settings
# ===========================================
DEVELOPMENT_MODE=false
AUTO_RESTART_ON_FAILURE=true
DEBUG_LOGGING=false

# ===========================================
# Performance Settings
# ===========================================
MAX_FUNCTIONS_REPLICAS=10
MIN_FUNCTIONS_REPLICAS=2
AUTO_SCALING_ENABLED=true
RESOURCE_MONITORING=true