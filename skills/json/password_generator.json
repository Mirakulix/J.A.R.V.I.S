{
  "skill_id": "password_generator",
  "name": "Secure Password Generator",
  "description": "Generates cryptographically secure passwords with customizable criteria for various security requirements",
  "category": "simple",
  "version": "1.0.0",
  "dependencies": ["secrets", "string", "re"],
  "api_requirements": {},
  "inputs": {
    "length": {
      "type": "integer",
      "required": false,
      "default": 16,
      "min": 8,
      "max": 128,
      "description": "Password length"
    },
    "include_uppercase": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Include uppercase letters"
    },
    "include_lowercase": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Include lowercase letters"
    },
    "include_numbers": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Include numeric digits"
    },
    "include_symbols": {
      "type": "boolean",
      "required": false,
      "default": true,
      "description": "Include special symbols"
    },
    "exclude_ambiguous": {
      "type": "boolean",
      "required": false,
      "default": false,
      "description": "Exclude ambiguous characters (0, O, l, I, etc.)"
    },
    "custom_pattern": {
      "type": "string",
      "required": false,
      "description": "Custom regex pattern for character set"
    }
  },
  "outputs": {
    "password": {
      "type": "string",
      "description": "Generated secure password"
    },
    "strength_score": {
      "type": "integer",
      "description": "Password strength score (1-100)"
    },
    "entropy_bits": {
      "type": "float",
      "description": "Password entropy in bits"
    },
    "compliance": {
      "type": "object",
      "properties": {
        "meets_common_policies": {"type": "boolean"},
        "estimated_crack_time": {"type": "string"}
      }
    }
  },
  "execution": {
    "type": "python_function",
    "entry_point": "generate_password",
    "timeout": 5,
    "retry_attempts": 1
  },
  "error_handling": {
    "invalid_parameters": "Return error with valid parameter ranges",
    "generation_failure": "Retry with default parameters"
  },
  "security": {
    "requires_api_key": false,
    "rate_limit": "unlimited",
    "data_privacy": "no_storage",
    "secure_random": true
  },
  "validation": {
    "character_set_validation": true,
    "minimum_complexity_check": true,
    "pattern_compliance": true
  }
}